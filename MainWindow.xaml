<Window x:Class="uchot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uchot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Оборудование" Click="OpenEqui" Background="Green" Foreground="White" BorderBrush="Green" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,0,0,0"/>
        <Button Content="Аудитория" Click="OpenAudit" Background="Green" Foreground="White" BorderBrush="Green" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="125,0,0,0"/>
        <Button Content="Пользователи" Click="OpenUser" Background="Green" Foreground="White" BorderBrush="Green" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="225,0,0,0"/>
        <Button Content="Статус оборудования" Click="OpenES" Background="Green" Foreground="White" BorderBrush="Green" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="325,0,0,0"/>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Margin="0,30,0,0"/>

    </Grid>
</Window>
